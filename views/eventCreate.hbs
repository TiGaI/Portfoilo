<h3>Card Creator</h3>
<form action="/makeEvent" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label>Title</label>
    <input type="text" value="{{event.title}}" name="title" class="form-control">
  </div>

  <div class="form-group">
    <label>Description</label>
    <input type="text-area" value="{{event.description}}" name="description" class="form-control">
  </div>

  <div class="form-group">
    <label>Price</label>
    <input type="number" value="{{event.price}}" name="price" class="form-control">
  </div>

  <div class="form-group">
    <label>Category</label>
    <input type="text" value="{{event.category}}" name="category" class="form-control">
  </div>

  <div class="form-group">
    <label>Event Starting Time</label>
    <input type="time" value="{{event.eventStartTime}}" name="eventStartTime" class="form-control">
  </div>

  <div class="form-group">
    <label>Event Closing Time</label>
    <input type="time" value="{{event.eventEndTime}}" name="eventEndTime" class="form-control">
  </div>

  <div class="form-group">
    <label>Location</label>
    <input type="text" value="{{event.locat}}" name="locat" class="form-control">
  </div>

  <div class="form-group">
     <label>Images For Events</label>
     <input type="file" name="file" class="form-control">
  </div>

  <div class="form-group">
     <label>Event Video</label>
     <input type="file" name="video" class="form-control">
  </div>
  <!--   <input type="submit" value="Send"> -->
    <button type="submit" class="btn btn-default">Complete</button>
</form>
