    <!-- MESSENGER BEGIN -->
    <div class="page-header">
      <h2>Horizons Messenger</h2>
    </div>
    <form method="post">
      {{#if success}}
        <div class="alert alert-success">
          {{{success}}}
        </div>
      {{/if}}
      {{#if error}}
        <div class="alert alert-warning">
          {{error}}
        </div>
      {{/if}}
      <div class="form-group">
        <label for="to">To:</label>
        <input class="form-control" type="text" id="to" name="to" placeholder="Username" required>
      </div>
      <div class="form-group">
        <textarea name="body" class="form-control" rows="4" style="width: 100%" placeholder="Message" required></textarea>
      </div>
      <button type="submit" class="btn btn-default">Send</button>
    </form>